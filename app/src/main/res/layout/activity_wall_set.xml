<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WallSetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:background="#FD3C31"
        >
        <ImageView
            android:id="@+id/backact"
            android:padding="7dp"
            android:layout_marginStart="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_marginStart="15dp"
            android:layout_gravity="center"
            android:textSize="24dp"
            android:textStyle="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nature Wallpaper"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <ImageView
        android:padding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/wallpap"
        android:src="@drawable/wall1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:id="@+id/setwall"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/set_wall"
            />

        <ImageView
            android:id="@+id/downloadimg"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/download"
            />

        <ImageView
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/sharewall"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/share_wall"
            />


    </LinearLayout>

    <FrameLayout
        android:id="@+id/admobnative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        />
</LinearLayout>